@model SENAI.CadastroPerfil.UI.Site.Models.UsuarioViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row" id="Aviso">

</div>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="row">
                <div class="col-xs-6">
                    @Html.DisplayNameFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email,
              new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-xs-6">
                    @Html.DisplayNameFor(m => m.Senha)
                    @Html.PasswordFor(m => m.Senha,
              new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-xs-6">
                    <input type="submit" value="Logar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div class="row">
        @using (Html.BeginForm("Logout", "Home", FormMethod.Post))
        {
            <input type="submit" value="Sair" class="btn btn-default" />
        }
    </div>

</div>
